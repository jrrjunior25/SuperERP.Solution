@code {
    private List<ProdutoLocal> produtos = new();
    private List<ProdutoLocal> produtosFiltrados = new();
    private string codigoBusca = "";
    private string formaPagamento = "Dinheiro";
    private bool processando = false;
    private bool mostrarMensagem = false;
    private string mensagem = "";
    private bool mensagemSucesso = false;

    protected override async Task OnInitializedAsync()
    {
        if (!AuthService.IsAuthenticated)
        {
            Navigation.NavigateTo("/", true);
            return;
        }

        await CaixaService.CarregarCaixaAbertoAsync();
        await ProdutoService.InicializarProdutosPadraoAsync();
        produtos = await ProdutoService.ObterTodosAsync();
        produtosFiltrados = produtos;

        VendaService.OnVendaChanged += StateHasChanged;
    }

    private void FiltrarProdutos()
    {
        if (string.IsNullOrWhiteSpace(codigoBusca))
        {
            produtosFiltrados = produtos;
        }
        else
        {
            var busca = codigoBusca.ToLower();
            produtosFiltrados = produtos.Where(p => 
                p.Nome.ToLower().Contains(busca) || 
                p.CodigoBarras.Contains(busca)
            ).ToList();
        }
    }

    private async Task HandleBuscaKeyPress(KeyboardEventArgs e)
    {
        FiltrarProdutos();

        if (e.Key == "Enter" && produtosFiltrados.Count == 1)
        {
            AdicionarProduto(produtosFiltrados[0]);
            codigoBusca = "";
            produtosFiltrados = produtos;
        }
    }

    private void AdicionarProduto(ProdutoLocal produto)
    {
        VendaService.AdicionarItem(produto, 1);
    }

    private void AlterarQuantidade(ItemVenda item, int delta)
    {
        VendaService.AlterarQuantidade(item, item.Quantidade + delta);
    }

    private void RemoverItem(ItemVenda item)
    {
        VendaService.RemoverItem(item);
    }

    private void LimparCarrinho()
    {
        VendaService.LimparCarrinho();
    }

    private async Task FinalizarVenda()
    {
        processando = true;

        try
        {
            var (sucesso, msg) = await VendaService.FinalizarVendaAsync(formaPagamento);
            mensagem = msg;
            mensagemSucesso = sucesso;
            mostrarMensagem = true;

            if (sucesso)
            {
                codigoBusca = "";
                produtosFiltrados = produtos;
            }
        }
        finally
        {
            processando = false;
        }
    }

    private void FecharMensagem()
    {
        mostrarMensagem = false;
    }

    private void Sair()
    {
        AuthService.Logout();
        Navigation.NavigateTo("/", true);
    }

    public void Dispose()
    {
        VendaService.OnVendaChanged -= StateHasChanged;
    }
}
