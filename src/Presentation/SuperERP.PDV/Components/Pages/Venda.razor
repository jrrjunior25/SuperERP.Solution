@page "/venda"
@using SuperERP.PDV.Services
@using SuperERP.PDV.Models
@inject AuthService AuthService
@inject CaixaService CaixaService
@inject ProdutoService ProdutoService
@inject VendaPDVService VendaService
@inject NavigationManager Navigation
@implements IDisposable

<div class="venda-container">
    @if (CaixaService.CaixaAtual == null || !CaixaService.CaixaAtual.Aberto)
    {
        <div class="caixa-fechado">
            <h2>‚ö†Ô∏è Caixa Fechado</h2>
            <p>√â necess√°rio abrir o caixa para realizar vendas</p>
            <button class="btn btn-primary" @onclick='() => Navigation.NavigateTo("/caixa")'>Abrir Caixa</button>
        </div>
    }
    else
    {
        <div class="venda-header">
            <div class="header-info">
                <h2>üõí Nova Venda</h2>
                <span>Operador: @AuthService.UserName</span>
            </div>
            <div class="header-actions">
                <button class="btn btn-secondary" @onclick='() => Navigation.NavigateTo("/caixa")'>üí∞ Caixa</button>
                <button class="btn btn-danger" @onclick="Sair">üö™ Sair</button>
            </div>
        </div>

        <div class="venda-content">
            <div class="produtos-section">
                <div class="busca-produto">
                    <input type="text" @bind="codigoBusca" @bind:event="oninput" @onkeypress="HandleBuscaKeyPress" 
                           class="form-control" placeholder="Digite o c√≥digo de barras ou busque o produto" />
                </div>

                <div class="produtos-grid">
                    @foreach (var produto in produtosFiltrados)
                    {
                        <div class="produto-card" @onclick="() => AdicionarProduto(produto)">
                            <div class="produto-nome">@produto.Nome</div>
                            <div class="produto-preco">R$ @produto.Preco.ToString("N2")</div>
                            <div class="produto-estoque">Estoque: @produto.EstoqueAtual</div>
                        </div>
                    }
                </div>
            </div>

            <div class="carrinho-section">
                <div class="carrinho-header">
                    <h3>Carrinho</h3>
                    @if (VendaService.ItensCarrinho.Any())
                    {
                        <button class="btn btn-sm btn-danger" @onclick="LimparCarrinho">Limpar</button>
                    }
                </div>

                <div class="carrinho-itens">
                    @if (!VendaService.ItensCarrinho.Any())
                    {
                        <div class="carrinho-vazio">
                            <p>üõí Carrinho vazio</p>
                            <small>Adicione produtos para iniciar a venda</small>
                        </div>
                    }
                    else
                    {
                        @foreach (var item in VendaService.ItensCarrinho)
                        {
                            <div class="carrinho-item">
                                <div class="item-info">
                                    <div class="item-nome">@item.Produto</div>
                                    <div class="item-preco">R$ @item.Preco.ToString("N2")</div>
                                </div>
                                <div class="item-actions">
                                    <button class="btn-qty" @onclick="() => AlterarQuantidade(item, -1)">-</button>
                                    <span class="item-qty">@item.Quantidade</span>
                                    <button class="btn-qty" @onclick="() => AlterarQuantidade(item, 1)">+</button>
                                    <button class="btn-remove" @onclick="() => RemoverItem(item)">üóëÔ∏è</button>
                                </div>
                                <div class="item-subtotal">R$ @item.Subtotal.ToString("N2")</div>
                            </div>
                        }
                    }
                </div>

                <div class="carrinho-total">
                    <div class="total-label">TOTAL</div>
                    <div class="total-valor">R$ @VendaService.TotalVenda.ToString("N2")</div>
                </div>

                @if (VendaService.ItensCarrinho.Any())
                {
                    <div class="pagamento-section">
                        <select @bind="formaPagamento" class="form-control">
                            <option value="Dinheiro">üíµ Dinheiro</option>
                            <option value="D√©bito">üí≥ D√©bito</option>
                            <option value="Cr√©dito">üí≥ Cr√©dito</option>
                            <option value="PIX">üì± PIX</option>
                        </select>

                        <button class="btn btn-success btn-finalizar" @onclick="FinalizarVenda" disabled="@processando">
                            @if (processando)
                            {
                                <span>Processando...</span>
                            }
                            else
                            {
                                <span>‚úÖ Finalizar Venda</span>
                            }
                        </button>
                    </div>
                }
            </div>
        </div>

        @if (mostrarMensagem)
        {
            <div class="modal-overlay" @onclick="FecharMensagem">
                <div class="modal-box @(mensagemSucesso ? "success" : "error")" @onclick:stopPropagation>
                    <h3>@(mensagemSucesso ? "‚úÖ Sucesso!" : "‚ùå Erro")</h3>
                    <p>@mensagem</p>
                    <button class="btn btn-primary" @onclick="FecharMensagem">OK</button>
                </div>
            </div>
        }
    }
</div>

