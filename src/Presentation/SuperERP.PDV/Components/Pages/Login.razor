@page "/login"
@using SuperERP.PDV.Services
@inject AuthService AuthService
@inject NavigationManager Navigation

<div style="display: flex; align-items: center; justify-content: center; height: 100vh; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
    <div style="background: white; padding: 40px; border-radius: 10px; box-shadow: 0 10px 40px rgba(0,0,0,0.2); width: 400px;">
        <h2 style="text-align: center; margin-bottom: 30px; color: #333;">SuperERP PDV</h2>
        
        <div style="margin-bottom: 20px;">
            <label style="display: block; margin-bottom: 5px; color: #555;">Usuário</label>
            <input @bind="usuario" type="text" style="width: 100%; padding: 12px; border: 1px solid #ddd; border-radius: 5px; font-size: 16px;" />
        </div>
        
        <div style="margin-bottom: 20px;">
            <label style="display: block; margin-bottom: 5px; color: #555;">Senha</label>
            <input @bind="senha" type="password" @onkeypress="HandleKeyPress" style="width: 100%; padding: 12px; border: 1px solid #ddd; border-radius: 5px; font-size: 16px;" />
        </div>
        
        @if (!string.IsNullOrEmpty(erro))
        {
            <div style="background: #fee; color: #c33; padding: 10px; border-radius: 5px; margin-bottom: 20px; text-align: center;">
                @erro
            </div>
        }
        
        <button @onclick="HandleLogin" style="width: 100%; padding: 12px; background: #667eea; color: white; border: none; border-radius: 5px; font-size: 16px; cursor: pointer; font-weight: bold;">
            Entrar
        </button>
        
        <p style="text-align: center; margin-top: 20px; color: #999; font-size: 14px;">
            Demo: pdv / pdv123
        </p>
    </div>
</div>

@code {
    private string usuario = "pdv";
    private string senha = "pdv123";
    private string erro = string.Empty;

    private async Task HandleLogin()
    {
        erro = string.Empty;
        
        var success = await AuthService.LoginAsync(usuario, senha);
        
        if (success)
        {
            Navigation.NavigateTo("/");
        }
        else
        {
            erro = "Usuário ou senha inválidos";
        }
    }

    private async Task HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await HandleLogin();
        }
    }
}
