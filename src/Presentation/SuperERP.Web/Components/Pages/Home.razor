        <MudCard Elevation="2">
            <MudCardContent>
                <MudText Typo="Typo.h6">Vendas Hoje</MudText>
                <MudText Typo="Typo.h3" Color="Color.Primary">R$ 0,00</MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>
    
    <MudItem xs="12" sm="6" md="3">
        <MudCard Elevation="2">
            <MudCardContent>
                <MudText Typo="Typo.h6">Clientes</MudText>
