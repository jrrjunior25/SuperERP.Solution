@page "/login"
@using SuperERP.Web.Auth
@inject AuthService AuthService
@inject NavigationManager Navigation
@inject ISnackbar Snackbar

<PageTitle>Login - SuperERP</PageTitle>

<MudContainer MaxWidth="MaxWidth.Small" Class="d-flex align-center justify-center" Style="min-height: 100vh;">
    <MudPaper Elevation="3" Class="pa-8" Style="width: 100%;">
        <MudText Typo="Typo.h4" Align="Align.Center" Class="mb-4">SuperERP</MudText>
        <MudText Typo="Typo.body1" Align="Align.Center" Class="mb-6">Sistema de Gestão Empresarial</MudText>
        
        <MudTextField @bind-Value="email" Label="Email" Variant="Variant.Outlined" Class="mb-4" />
        <MudTextField @bind-Value="password" Label="Senha" Variant="Variant.Outlined" InputType="InputType.Password" Class="mb-4" />
        
        <MudButton Variant="Variant.Filled" Color="Color.Primary" FullWidth="true" Size="Size.Large" OnClick="HandleLogin" Disabled="loading">
            @if (loading)
            {
                <MudProgressCircular Size="Size.Small" Indeterminate="true" />
            }
            else
            {
                <text>Entrar</text>
            }
        </MudButton>
        
        <MudText Typo="Typo.caption" Align="Align.Center" Class="mt-4" Color="Color.Secondary">
            Demo: admin@supererp.com / admin123
        </MudText>
    </MudPaper>
</MudContainer>

@code {
    private string email = "admin@supererp.com";
    private string password = "admin123";
    private bool loading = false;

    private async Task HandleLogin()
    {
        loading = true;
        
        try
        {
            var success = await AuthService.LoginAsync(email, password);
            
            if (success)
            {
                Snackbar.Add("Login realizado com sucesso!", Severity.Success);
                Navigation.NavigateTo("/");
            }
            else
            {
                Snackbar.Add("Email ou senha inválidos", Severity.Error);
            }
        }
        catch
        {
            Snackbar.Add("Erro ao fazer login", Severity.Error);
        }
        finally
        {
            loading = false;
        }
    }
}
