@using SuperERP.PDV.Application.Dtos
@inject ICaixaAppService CaixaService
@inject ISnackbar Snackbar

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Fechar Sessão de Caixa</MudText>
    </TitleContent>
    <DialogContent>
        @if (_resumo == null)
        {
            <MudText Class="mb-4">Informe o valor total contado na gaveta para iniciar o fechamento.</MudText>
            <MudNumericField @bind-Value="_valorContado" Label="Valor Contado" Variant="Variant.Outlined" Adornment="Adornment.Start" AdornmentText="R$" />
        }
        else
        {
            <MudGrid Spacing="1">
                <MudItem xs="6"><MudText>Valor de Abertura:</MudText></MudItem>
                <MudItem xs="6"><MudText Align="Align.Right">@_resumo.ValorAbertura.ToString("C")</MudText></MudItem>

                <MudItem xs="6"><MudText>+ Total em Dinheiro:</MudText></MudItem>
                <MudItem xs="6"><MudText Align="Align.Right">@_resumo.TotalPagamentosDinheiro.ToString("C")</MudText></MudItem>

                <MudItem xs="12"><MudDivider Class="my-1" /></MudItem>

                <MudItem xs="6"><MudText Typo="Typo.subtitle1"><b>Valor Esperado:</b></MudText></MudItem>
                <MudItem xs="6"><MudText Typo="Typo.subtitle1" Align="Align.Right"><b>@_resumo.ValorEsperado.ToString("C")</b></MudText></MudItem>

                <MudItem xs="6"><MudText>Valor Contado:</MudText></MudItem>
                <MudItem xs="6"><MudText Align="Align.Right">@_resumo.ValorContado.ToString("C")</MudText></MudItem>

                <MudItem xs="12"><MudDivider Class="my-1" /></MudItem>

                <MudItem xs="6"><MudText Typo="Typo.h6" Color="@(_resumo.Diferenca >= 0 ? Color.Success : Color.Error)"><b>Diferença:</b></MudText></MudItem>
                <MudItem xs="6"><MudText Typo="Typo.h6" Color="@(_resumo.Diferenca >= 0 ? Color.Success : Color.Error)" Align="Align.Right"><b>@_resumo.Diferenca.ToString("C")</b></MudText></MudItem>
            </MudGrid>
        }
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancelar</MudButton>
        @if (_resumo == null)
        {
            <MudButton Color="Color.Primary" OnClick="CalcularFechamento">Calcular Fechamento</MudButton>
        }
        else
        {
            <MudButton Color="Color.Error" Variant="Variant.Filled" OnClick="ConfirmarFechamento">Confirmar Fechamento</MudButton>
        }
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    [Parameter] public Guid SessaoCaixaId { get; set; }

    private decimal _valorContado;
    private ResumoFechamentoDto? _resumo;

    private async Task CalcularFechamento()
    {
        try
        {
            var dto = new FecharSessaoDto { SessaoCaixaId = SessaoCaixaId, ValorContado = _valorContado };
            _resumo = await CaixaService.FecharSessao(dto);
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Erro ao calcular fechamento: {ex.Message}", Severity.Error);
        }
    }

    private void Cancel() => MudDialog.Cancel();
    private void ConfirmarFechamento() => MudDialog.Close(DialogResult.Ok(true));
}
